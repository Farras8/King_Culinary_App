<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:id="@+id/dialogEditRecipe">

    <TextView
        android:fontFamily="@font/regular_itim"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forgotTitle"
        android:padding="10dp"
        android:textSize="17dp"
        android:background="@color/krem"
        android:text="Edit Recipe"
        android:textColor="@color/Green"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toTopOf="parent"/>


    <ScrollView
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="679dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgotTitle"
        app:layout_constraintVertical_bias="0.737">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/regular_itim"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Add Title" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:fontFamily="@font/regular_itim"
                        android:id="@+id/title_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/kremTua"
                        android:hint="Title..."
                        android:padding="12dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/regular_itim"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Category" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/kremTua"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:hint="Select Category">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:fontFamily="@font/regular_itim"
                            android:id="@+id/category_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/regular_itim"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Description" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:fontFamily="@font/regular_itim"
                        android:id="@+id/description_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/kremTua"
                        android:hint="Description..."
                        android:padding="12dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/regular_itim"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Photo" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/up_photo"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/kremTua"
                        android:scaleType="centerCrop"
                        android:src="@drawable/up_photo" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/regular_itim"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Ingredients" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:fontFamily="@font/regular_itim"
                        android:id="@+id/ingredient_box"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/kremTua"
                        android:hint="Ingredient..."
                        android:padding="12dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/regular_itim"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Instructions" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:fontFamily="@font/regular_itim"
                        android:id="@+id/instruction_box"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/kremTua"
                        android:hint="Instruction.."
                        android:padding="12dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp">

                <Button
                    android:fontFamily="@font/regular_itim"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:id="@+id/btnCancel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:backgroundTint="@color/Green"
                    android:text="Cancel" />

                <Button
                    android:fontFamily="@font/regular_itim"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:id="@+id/btnEdit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/Green"
                    android:text="Save" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
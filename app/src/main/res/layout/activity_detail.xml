<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@color/krem">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/krem"
                app:cardElevation="10dp">
                <TextView
                    android:fontFamily="@font/regular_itim"
                    android:textStyle="bold"
                    android:textColor="@color/Gray"
                    android:textSize="12dp"
                    android:layout_marginTop="13dp"
                    android:layout_gravity="center"
                    android:id="@+id/getRecipeCategory"
                    android:text="Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="start"
                    android:id="@+id/btnBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_arrow_back_ios_24"
                    android:tint="@color/Green" />
                <TextView
                    android:fontFamily="@font/regular_itim"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/Green"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/getRecipeName"
                    android:text="Recipe Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/beef_casserole"
                    android:id="@+id/getRecipeImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/krem">

                    <LinearLayout
                        android:background="@drawable/border"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/getUserImage"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/baseline_account_circle_24"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:fontFamily="@font/regular_itim"
                                android:id="@+id/getRecipeDate"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:text="Date"
                                android:textColor="@color/Gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:fontFamily="@font/regular_itim"
                                android:id="@+id/getRecipeUsername"
                                android:layout_marginTop="10dp"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:text="Username"
                                android:textColor="@color/Gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <ImageView
                            android:padding="5dp"
                            android:tint="@color/Green"
                            android:id="@+id/btnComment"
                            android:layout_marginLeft="100dp"
                            android:src="@drawable/baseline_comment_24"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                        <ImageView
                            android:padding="5dp"
                            android:tint="@color/Green"
                            android:id="@+id/Bookmark"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/baseline_bookmark_border_24"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/black"
                    android:fontFamily="@font/regular_itim"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/kremTua">

                    <TextView
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/regular_itim"
                        android:id="@+id/getRecipeDescription"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/black"
                    android:fontFamily="@font/regular_itim"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/kremTua">

                    <TextView
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/regular_itim"
                        android:id="@+id/getRecipeIngredient"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingredients" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/black"
                    android:fontFamily="@font/regular_itim"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instructions" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/kremTua">

                    <TextView
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/regular_itim"
                        android:id="@+id/getRecipeInstructions"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instructions" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>